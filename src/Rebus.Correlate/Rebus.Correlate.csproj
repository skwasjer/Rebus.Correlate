<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard1.3;net46</TargetFrameworks>
    <IsTestProject>false</IsTestProject>
  </PropertyGroup>

  <Import Project="..\Package.props" />

  <PropertyGroup>
    <Description>Rebus integration of Correlate to correlate message flow via any supported Rebus transport.</Description>
    <PackageProjectUrl>https://github.com/skwasjer/Rebus.Correlate</PackageProjectUrl>
    <PackageTags>rebus, transport, correlationid, correlation, correlate, causation</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Correlate" Version="3.0.0" />
    <PackageReference Include="Rebus" Version="4.3.0" />
  </ItemGroup>

</Project>
